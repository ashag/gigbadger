<div id="ww">
    <div class="container align-center">
    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <%= image_tag avatar(@user), class: "img-circle img-responsive profile-img" %>
          <div class="rating">
          <%= rating_for @user,  dimension = nil, options = {readonly: true} %>
        </div>
        <h1>Hi, I am <%= @user.name %>!</h1>
        <p><%= @user.bio %></p>

      </div><!-- /col-lg-8 -->
    </div><!-- /row -->
    </div> <!-- /container -->
</div><!-- /ww -->
<hr>

<div class="container align-center">
  <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <% if current_user != @user %>
          <%= hidden_field_tag :user_id, @user.id %>
          <%= button_to "Message", new_message_path(@user), method: :get, class: "btn btn-theme pull-left"%> <br>
        <% end %>
      </div>
  </div>
</div>