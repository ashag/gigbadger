<div class="container" id="padded_container">
  <div class="row">
      <div class="col-sm-10 account_heading"><h1>Hiya, <%= current_user.name %>!</h1></div>
  </div>
  <%= render 'side_navbar' %>
  <div class="col-sm-9">

  <%= image_tag avatar(@receipts.last.notification.sender), class: "tiny img-circle img-responsive" %>
  <%= @receipts.last.notification.sender.email %>


  <div class="container">
    <%= form_tag({controller: "messages", action: "reply"}, method: :post) do %>
      <%= hidden_field_tag :subject, @conversation.subject %>
      <%= text_area_tag :body, nil, class: "message_form form-control", rows: "5" %><br>
      <%= hidden_field_tag :conversation, @conversation.id %>
      <%= submit_tag 'Reply', class: "btn btn-theme pull-left" %>
    <% end %>
  </div>
  
  <div class="clear"></div>
    <% @receipts.each do |receipt| %>
        <div class="message_box">
          <p class="tiny_font float-left">From: <%= receipt.notification.sender.email %></p>
          <p class="tiny_font float-right">Received: <%= display_date(receipt.message.created_at)%></p>
          <div class="clear"></div>
          <p><%= receipt.message.body %></p>
        </div>
    <% end %>
  </div>

<%= will_paginate @receipts, class: "pagination", id: "myPager" %>
</div>





